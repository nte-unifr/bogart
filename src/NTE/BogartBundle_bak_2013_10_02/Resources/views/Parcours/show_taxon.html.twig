{% extends 'NTEBogartBundle::parcours.html.twig' %}

{% block content %}
    <script type="text/javascript">

	    (function(window, $, PhotoSwipe){
		
		    $(document).ready(function(){
			
			    var options = {loop: false,
						       captionAndToolbarAutoHideDelay: 0,};
			    $("#Gallery a").photoSwipe(options);
			    $("#Gallery1 a").photoSwipe(options);
		
		    });
		
		
	    }(window, window.jQuery, window.Code.PhotoSwipe));
	
    </script>

    <div data-role="page" id="details">


        <div data-theme="b" data-role="header" data-position="fixed">
            <h3>{{ parcoursposition.taxon.nom }}</h3>
		    <a href="{{ path('parcours') }}{% if(app.request.attributes.get('_locale') == 'de') %}/de/{% else %}/fr/{% endif %}" data-icon="home" data-iconpos="notext" data-direction="reverse" rel="external">Home</a>
        </div>
        <div data-role="content" class="gallery-page">
	        
	        <ul id="Gallery1" class="gallery">
		        <div class="descr">
                    <h2>{{ parcoursposition.numero }} - {{ parcoursposition.taxon.nom }}</h2>
                    {% for fichier in parcoursposition.taxon.fichiers %}
                        <a href="{% path fichier.media, 'big' %}" rel="external" {% if(fichier.id != parcoursposition.taxon.fichiers.first.id) %} style="display: none;"{% endif %}><img src="{% path fichier.media, 'small' %}"  alt="{{ parcoursposition.taxon.nom }}" width="25%" align="right" border="1" /></a>
                    {% endfor %}
                    <h3>{{ 'Nom scientifique' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.nom }}</p>
                    <h3>{{ 'Famille' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.famille1 }}</p>
                    <h3>{{ 'Nom français' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.nomFr }}</p>
                    <h3>{{ 'Origine' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.origineFr }}</p>
                    <h3>{{ 'Habitat' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.habitatFr }}</p>
                    <h3>{{ 'Remarques' | trans }}</h3>
                    <p>{{ parcoursposition.taxon.remarqueFr }}</p>
                </div>
            </ul>
		
	        <ul id="Gallery" class="gallery">
            {% for fichier in parcoursposition.taxon.fichiers %}
                <li><a href="{% path fichier.media, 'big' %}" rel="external"><img src="{% path fichier.media, 'small' %}" alt="{{ parcoursposition.taxon.nom }}" width="25%" align="right" border="1" /></a></li>
            {% endfor %}
            </ul>
        </div>
	
	
        <div data-theme="b" data-role="footer" data-position="fixed">	
	        <div data-role="navbar" data-mini="true">
		        <ul>
			        <li>{% if (prev=='') %}
			            <a href="#debut" data-iconpos="notext" data-icon="search" data-transition="fade"></a>
			            {% else %}
			            <a href="{{ path('parcours_taxon', { 'numero': prev.numero }) }}" rel="external" data-iconpos="notext" data-icon="arrow-l" data-transition="slide"></a>
			            {% endif %}
			        </li>
			        <li>{% if (next=='') %}
			            <a href="#fin" data-iconpos="notext" data-icon="search" data-transition="fade"></a>
			            {% else %}
			            <a href="{{ path('parcours_taxon', { 'numero': next.numero }) }}" rel="external" data-iconpos="notext" data-icon="arrow-r" data-transition="slide"></a>
			            {% endif %}
			        </li>
		        </ul>
            </div>
        </div></div>


    <!-- PAGE DEBUT -->
    <div data-role="page" id="debut">


        <div data-theme="b" data-role="header" data-position="fixed">
            <h3>{{ parcoursposition.taxon.nom }}</h3>
		    <a href="{{ path('parcours') }}{% if(app.request.attributes.get('_locale') == 'de') %}/de/{% else %}/fr/{% endif %}" data-icon="home" data-iconpos="notext" data-direction="reverse" rel="external">Home</a>
        </div>
        <div data-role="content">
            <h1 class="ui-li-heading">Début du parcours</h1>
            <a href="#details" data-role="button">Commencer le parcours</a>
            <h3>ou</h3>
            <a href="{{ path('parcours') }}" rel="external" data-role="button">Retourner à l'accueil</a>
        </div>
	
    </div>


    <!-- PAGE FIN -->
    <div data-role="page" id="fin">


        <div data-theme="b" data-role="header" data-position="fixed">
            <h3>{{ parcoursposition.taxon.nom }}</h3>
		    <a href="{{ path('parcours') }}{% if(app.request.attributes.get('_locale') == 'de') %}/de/{% else %}/fr/{% endif %}" data-icon="home" data-iconpos="notext" data-direction="reverse" rel="external">Home</a>
        </div>
        <div data-role="content">
            <h1 class="ui-li-heading">Fin du parcours</h1>
            <a href="{{ path('parcours') }}" rel="external" data-role="button">Retourner à l'accueil</a>
        </div>
    </div>
{% endblock %}
