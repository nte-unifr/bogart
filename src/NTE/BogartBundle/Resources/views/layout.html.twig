<html>
<header>
    {% block title %}<title>BoGart</title>{% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('bundles/ntebogart/stylesheets/foundation.min.css') }}" type="text/css" media="all" />
    <link rel="stylesheet" href="{{ asset('bundles/ntebogart/stylesheets/app.css') }}" type="text/css" media="all" />

    <script src="{{ asset('bundles/ntebogart/javascripts/modernizr.foundation.js') }}" type="text/javascript"></script>
    
    <style>
        body {line-height: 1.6em;}
        nav a, nav span {
            margin: 5px;
        }
    </style>
</header>
<body>

    <div class="row">
        <div class="twelve columns">
        
            {% block entete %}
                <h1><img src="{{ asset('bundles/ntebogart/images/logo.png') }}" alt="BoGart (logo)" /></h1>
                <!-- Entire Navbar Code -->
                <ul class="nav-bar">
                  <li class="active"><a href="{{ path('bogart') }}">{{ 'Accueil'|trans }}</a></li>
                  <li><a href="{{ path('taxon') }}">{{ 'Taxons'|trans }}</a></li>
                  <li>
                    <a href="{{ path('search') }}">{{ 'Recherche'|trans }}</a>
                  </li>
                {% for locale in ['fr', 'de'] %}
                    <li>
                        <a href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge({'_locale' : locale})) }}">{{ locale }}</a>
                    </li>
                {% endfor %}
                </ul>

            {% endblock %}
                
            {% block breadcrumb %}
                <ul class="breadcrumbs">
                    <li><a href="#">{{ 'Accueil'|trans }}</a></li>
                </ul>
            {% endblock %}
            
            {% block content %}
            {% endblock %}
        
        </div>
    </div>
</body>
</html>
