{% extends 'NTEBogartBundle::layout.html.twig' %}

{% block title %}<title>{{ 'Taxon'|trans }} - BoGart</title>{% endblock %}

{% block breadcrumb %}
    <ul class="breadcrumbs">
        <li><a href="{{ path('taxon') }}">{{ 'Accueil'|trans }}</a></li>
        <li class="current"><span>{{ 'Taxons'|trans }}</span></li>
    </ul>
{% endblock %}

{% block content %}
    <h1>{{ 'Liste des taxons'|trans }}</h1>

    {% if pager is defined and pager.haveToPaginate %}
    <div class="row">
        <div class="twelve columns">
            {{ pagerfanta(pager, 'my_view_1', {'routeName': 'taxon_page'}) }}
            <br />
        </div>
    </div>
    {% endif %}

    <table class="records_list">
        <thead>
            <tr>
                <th>{{ 'Nom'|trans }}</th>
                <th>{{ 'Famille'|trans }}</th>
                <th>{{ 'Nom français'|trans }}</th>
                <th>{{ 'Nom allemand'|trans }}</th>
                <th>{{ 'Catégories'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('taxon_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.famille1 }}</td>
                <td>{{ entity.nomFr }}</td>
                <td>{{ entity.nomDe }}</td>
                <td>{% for cat in entity.categorie %}{% if loop.index > 1 %}, {% endif %}{{ cat }}{% endfor %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if pager is defined and pager.haveToPaginate %}
    <div class="row">
        <div class="twelve columns">
            {{ pagerfanta(pager, 'my_view_1', {'routeName': 'taxon_page'}) }}
        </div>
    </div>
    {% endif %}

{% endblock %}
